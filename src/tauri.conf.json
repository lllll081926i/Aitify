{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Aitify",
  "version": "1.5.2",
  "identifier": "com.aitify.desktop",
  "build": {
    "frontendDist": "../ui",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Aitify",
        "width": 512,
        "height": 650,
        "minWidth": 512,
        "maxWidth": 512,
        "minHeight": 600,
        "resizable": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "transparent": false,
        "backgroundColor": "#f8f9fa"
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "style-src": "'self' 'unsafe-inline'",
        "script-src": "'self'",
        "img-src": "'self' data:"
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/icon.ico"]
  },
  "plugins": {}
}
